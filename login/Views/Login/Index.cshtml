@model LoginModel
@{
    ViewData["Title"] = "Login";
}
<h1>Minha Tela de Login</h1>

<form asp-controller="Login" asp-action="Entrar" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control"asp-for="Login"  aria-describedby="emailHelp" placeholder="Enter email">
      @Html.ValidationMessageFor(x=>x.Login)
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control"  asp-for="Senha"  placeholder="Password">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>
 
    <button type="submit" class="btn btn-primary">Submit</button>
</form>